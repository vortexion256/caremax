# CareMax Environment Variables Example
# Copy this file to .env and fill in your actual values

# --- API Configuration ---
PORT=3001
GEMINI_API_KEY=your_gemini_api_key
# For Firebase Admin (Option A: Service Account JSON)
# GOOGLE_APPLICATION_CREDENTIALS=./service-account.json
# For Firebase Admin (Option B: Individual Vars)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your_client_email
FIREBASE_PRIVATE_KEY="your_private_key"
FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com

# --- Frontend (Admin & Widget) Configuration ---
# These are used by Vite during build/dev
VITE_API_URL=http://localhost:3001
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id

# --- Marz Pay Billing ---
MARZPAY_COLLECTIONS_URL=https://wallet.wearemarz.com/api/collections
MARZPAY_CHECKOUT_URL=https://wallet.wearemarz.com/checkout
MARZPAY_SECRET_KEY=your_marzpay_secret_key
MARZPAY_VERIFY_URL=https://wallet.wearemarz.com/api/verify
ADMIN_APP_URL=http://localhost:3002
